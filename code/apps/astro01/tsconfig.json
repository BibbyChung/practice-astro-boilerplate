{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/lib/*": ["src/lib/*"],
      "~/layouts/*": ["src/layouts/*"],
      "~/server/*": ["src/server/*"],
      "~/styles/*": ["src/styles/*"]
    }
  }
}
